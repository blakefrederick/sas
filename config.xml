<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ssecurity.workshop" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Safe and Secure Trip Tracker</name>
    <description>
        Safe and Secure Trip Tracker
    </description>
    <icon src="www/images/sas_icon.png" />
    <author email="blakefre@gmail.com" href="http://blakefrederick.com">
        Blake Frederick
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>


    <feature name="Geolocation">
        <param name="ios-package" value="CDVLocation" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.GeoBroker" />
    </feature>
    <feature name="Console">
        <param name="ios-package" value="CDVLogger" />
    </feature>

    <allow-navigation href="http://*/*" />

    <plugin name="com.cordova.plugins.sms" spec="0.1.1" source="pgb" />

</widget>
